{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "profile": { "type": "string" },
    "rictusd": { "type": "string" },
    "internal": { "type": "string" },
    "patch_rictusd": { "type": "string" },

    "min_go": { "type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$" },
    "disallow_cgo": { "type": "boolean" },

    "vet": { "type": "object", "additionalProperties": false, "properties": { "enabled": { "type": "boolean" } } },

    "golangci_lint": {
      "type": "object",
      "additionalProperties": false,
      "properties": { "enabled": { "type": "boolean" }, "fail_on_issues": { "type": "boolean" }, "config": { "type": "string" } }
    },

    "suggest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tags": { "type": "array", "items": { "type": "string" } },
        "reality": { "type": "string" },
        "env": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },

    "tests": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "race": { "type": "boolean" },
        "coverage_min": { "type": "number", "minimum": 0, "maximum": 100 },
        "timeout_sec": { "type": "integer", "minimum": 1 }
      }
    },

    "package": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "include": { "type": "array", "items": { "type": "string" } },
        "exclude": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "required": ["min_go", "disallow_cgo", "vet", "tests", "package"]
}

