{
  "profile": "default",
  "rictusd": "router",
  "internal": "modules to extend rictusd",
  "patch_rictusd": "absolutely not",

  "min_go": "1.22",
  "disallow_cgo": true,

  "vet": { "enabled": true },
  "golangci_lint": { "enabled": true, "fail_on_issues": true },

  "suggest": {
    "tags": [],
    "reality": "no garbage fluff, unnecessary code",
    "env": { "CGO_ENABLED": "0" }
  },

  "tests": {
    "enabled": true,
    "race": true,
    "coverage_min": 0,
    "timeout_sec": 1200
  },

  "package": {
    "enabled": true,
    "include": ["**/*"],
    "exclude": [".git/**", "build_artifacts/**"]
  }
}

