{
  "profile": "default",
  "rictusd": "router",
  "internal": "modules to extend rictusd",
  "patch_rictusd": "absolutely not",

  "min_php": "8.2",

  "lint": { "enabled": true, "fail_on_errors": true },

  "composer": { "allowed": false, "audit": false },

  "static_checks": {
    "forbid_pdo": true,
    "require_mysqli": true,
    "require_json_config": true,
    "module_layout": { "required_paths": ["app/modules"], "forbid_paths": [".git", "node_modules"] }
  },

  "suggest": { "reality": "no garbage fluff, unnecessary code" },

  "tests": { "enabled": true, "framework": "phpunit", "coverage_min": 0, "timeout_sec": 1200 },

  "package": { "enabled": true, "include": ["**/*"],
  "exclude": ["vendor/**", ".git/**", "node_modules/**", "build_artifacts/**"] }
}

